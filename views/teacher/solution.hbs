<script>
  
 async function sendMessage(event) {
            event.preventDefault();

            const userMessage = document.getElementById('user-message').value;

            appendMessage('user', userMessage, 'right');

            const botResponse = await fetchBotResponse(userMessage);

            appendMessage('bot', botResponse, 'left');

            scrollChatToBottom();

            document.getElementById('user-message').value = '';
        }

        async function fetchBotResponse(userMessage) {
            const apiUrl = `https://api.allorigins.win/raw?url=${encodeURIComponent('http://api.brainshop.ai/get?bid=179383&key=1sybvxe8sqozxKq0&uid=123&msg=' + userMessage)}`;
            
            
            try {
                const response = await fetch(apiUrl);
                const data = await response.json();
                return data.cnt;
            } catch (error) {
                console.error('Error fetching bot response:', error);
                return 'Sorry, an error occurred while fetching the response.';
            }
        }

// Function to append a message to the chat history
function appendMessage(sender, message, alignment) {
    const history = document.getElementById('chat-history');
    const timestamp = getCurrentTime();

    const messageElement = `<li class="chat-message${alignment === 'left' ? ' chat-message-left' : ''}">
        <div class="d-flex overflow-hidden">
            ${alignment === 'right' && sender === 'user' ? `<div class="user-avatar flex-shrink-0 me-3">
                <div class="avatar avatar-sm">
                    <img src="{{student.profilePic}}" alt="Avatar" class="rounded-circle">
                </div>
            </div>` : ''}
            <div class="chat-message-wrapper flex-grow-1">
                <div class="chat-message-text">
                    <p class="mb-0">${message}</p>
                </div>
                <div class="text-${alignment} text-muted mt-1">
                    <i class='bx bx-check-double text-success'></i>
                    <small>${timestamp}</small>
                </div>
            </div>
            ${alignment === 'left' && sender === 'bot' ? `<div class="user-avatar flex-shrink-0 ms-3">
                <div class="avatar avatar-sm">
                    <img src="../../assets/img/avatars/1.png" alt="Avatar" class="rounded-circle">
                </div>
            </div>` : ''}
        </div>
    </li>`;

    // Append the message to the chat history
    history.innerHTML += messageElement;
}

// Function to get the current time
function getCurrentTime() {
    const now = new Date();
    const hours = now.getHours();
    const minutes = now.getMinutes();
    return `${hours}:${minutes}`;
}

// Function to scroll the chat to the bottom
function scrollChatToBottom() {
    const chatHistory = document.getElementById('chat-history');
    chatHistory.scrollTop = chatHistory.scrollHeight;
}


