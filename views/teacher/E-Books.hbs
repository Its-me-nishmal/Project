<script>
    let currentId;  // Add this variable to store the current ID

    function openIframe(iframeUrl, itemId) {
        // Set the iframe source
        document.getElementById('iframeContent').src = iframeUrl;

        // Show the modal
        $('#iframeModal').modal('show');

        // Set the current ID
        currentId = itemId;

        // Update the favorites button based on whether the current item is already a favorite
        updateFavoritesButton(itemId);

        // Additional customization for fullscreen
        customizeFullscreen();
    }

    function closeIframe() {
        // Reset iframe source
        document.getElementById('iframeContent').src = '';

        // Close the modal
        $('#iframeModal').modal('hide');
    }

    function addToFavorites(itemId) {
        // Get existing favorites from the cookie
        const existingFavorites = getFavorites();

        // Check if the item is already in the favorites
        const isFavorite = existingFavorites.includes(itemId);

        if (isFavorite) {
            // Remove the item from favorites
            const updatedFavorites = existingFavorites.filter(id => id !== itemId);
            document.cookie = `fav=${JSON.stringify(updatedFavorites)}; expires=Thu, 01 Jan 2030 00:00:00 UTC; path=/;`;
        } else {
            // Add the new item to the favorites array
            existingFavorites.push(itemId);
            document.cookie = `fav=${JSON.stringify(existingFavorites)}; expires=Thu, 01 Jan 2030 00:00:00 UTC; path=/;`;
        }

        // Update the favorites button
        updateFavoritesButton(itemId);

        // Close the modal
        $('#iframeModal').modal('hide');
    }

    function updateFavoritesButton(itemId) {
        // Get existing favorites from the cookie
        const existingFavorites = getFavorites();

        // Check if the item is already in the favorites
        const isFavorite = existingFavorites.includes(itemId);

        // Update the button text and onclick function
        const favoritesButton = document.getElementById('favoritesButton');
        if (isFavorite) {
            favoritesButton.innerText = 'Remove from Favorites';
            favoritesButton.onclick = () => addToFavorites(itemId);
        } else {
            favoritesButton.innerText = 'Add to Favorites';
            favoritesButton.onclick = () => addToFavorites(itemId);
        }
    }

    function toggleFullscreen() {
        const iframe = document.getElementById('iframeContent');
        if (iframe.requestFullscreen) {
            iframe.requestFullscreen();
        } else if (iframe.mozRequestFullScreen) {
            iframe.mozRequestFullScreen();
        } else if (iframe.webkitRequestFullscreen) {
            iframe.webkitRequestFullscreen();
        } else if (iframe.msRequestFullscreen) {
            iframe.msRequestFullscreen();
        }

        // Additional customization for fullscreen
        customizeFullscreen();
    }

    function customizeFullscreen() {
        // Set background color to white when in fullscreen
        document.getElementById('iframeContent').style.backgroundColor = 'white';

        // Increase height when in fullscreen
        document.getElementById('iframeModal').style.height = '90%';
    }

    function getFavorites() {
        // Get the favorites array from the cookie
        const cookieValue = document.cookie.replace(/(?:(?:^|.*;\s*)fav\s*=\s*([^;]*).*$)|^.*$/, "$1");
        return cookieValue ? JSON.parse(cookieValue) : [];
    }
</script>






