        <div class="d-flex justify-content-between">
            <h5 class="mb-1">{{this.content}}</h5>
            <small>{{this.time}}</small>
        </div>
        <p class="mb-1">Status:
            {{#if this.read}}
                <span style="color: green;">Read</span>
            {{else}}
                <span style="color: red;">Unread</span>
            {{/if}}
        </p>
    </a>

    <!-- Modal with scrollable content -->
    <button type="button" class="btn {{#if this.read}}btn-secondary{{else}}btn-primary{{/if}}" data-bs-toggle="modal" data-bs-target="#modalScrollable{{@index}}">
        {{#if this.read}}
            Mark as Unread
        {{else}}
            Mark as Read
        {{/if}}
    </button>

    <!-- Modal -->
    <div class="modal fade" id="modalScrollable{{@index}}" tabindex="-1" aria-labelledby="modalScrollableTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalScrollableTitle">{{this.content}}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
