// JavaScript function to fetch videos when a button is clicked
async function fetchVideos(index) {
  try {
    const response = await fetch(`/videos/${index}`);
    const playlistData = await response.json();

    // Display videos in the card body
    const cards = document.querySelectorAll('.card-body');
    cards.forEach(async (card, i) => {
      // Clear previous content
      card.innerHTML = '';
      card.style.width = '0';
      card.style.height = '0';

      const video = playlistData[i];

      // Create elements for video information
      const titleElement = document.createElement('h5');
      titleElement.classList.add('card-title', 'text-primary');
      titleElement.style.height = '50px';
      titleElement.textContent = video.title;

      const descriptionElement = document.createElement('p');
      descriptionElement.classList.add('mb-4');
      descriptionElement.textContent = video.description;

      const videoElement = document.createElement('iframe');
      videoElement.src = `https://www.youtube.com/embed/${video.videoId}`;
      videoElement.width = '100%';
      videoElement.height = '100%';
      videoElement.allowFullscreen = true;

      // Append elements to the card
      card.appendChild(titleElement);
      card.appendChild(descriptionElement);
      card.appendChild(videoElement);

      // Ensure the 'video-player' div is present in the card
      const videoPlayerElement = card.querySelector('.video-player');
      if (videoPlayerElement) {
        videoPlayerElement.appendChild(videoElement);
      } else {
        console.error('Error: .video-player element not found in card.');
      }
      card.style.width = 'auto';
      card.style.height = 'auto';
    });
  } catch (error) {
    console.error('Error fetching videos:', error.message);
  }
}


