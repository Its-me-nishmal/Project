<script>
  document.getElementById('searchInput').addEventListener('input', function () {
    // Get the search term
    var searchTerm = this.value.trim().toLowerCase();

    // Remove previous highlights
    removeHighlights();

    if (searchTerm !== '') {
      // Search and highlight
      highlightSearchResults(searchTerm);
    }
  });

  function removeHighlights() {
    var highlights = document.querySelectorAll('.highlight');
    highlights.forEach(function (highlight) {
      highlight.replaceWith(highlight.textContent);
    });
  }

  function highlightSearchResults(searchTerm) {
    var content = document.getElementById('content'); // Change 'content' to the actual ID or class of the container with your content
    var contentText = content.innerHTML;
    var searchRegex = new RegExp(searchTerm, 'gi');

    content.innerHTML = contentText.replace(searchRegex, function (match) {
      return '<span class="highlight">' + match + '</span>';
    });
  }
</script>

