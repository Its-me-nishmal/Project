<script>
  // Handle the click event on the "Add Playlist" button
  document.querySelectorAll('.addPlaylist').forEach(button => {
    button.addEventListener('click', function() {
      const index = this.getAttribute('data-index');
      const additionalPlaylistsContainer = document.getElementById(`additionalPlaylists${index}`);

      // Create a new input field for the playlist
      const newPlaylistInput = document.createElement('input');
      newPlaylistInput.type = 'text';
      newPlaylistInput.className = 'form-control playlist';
      newPlaylistInput.placeholder = 'New Playlist';
      additionalPlaylistsContainer.appendChild(newPlaylistInput);
    });
  });
</script>

              <script>

